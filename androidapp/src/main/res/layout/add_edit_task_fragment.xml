<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.ddns.softux.hey.addedittask.AddEditTaskFragment">

    <data>

        <variable
            name="taskViewModel"
            type="net.ddns.softux.hey.addedittask.TaskViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_edit_task_fragment_title_hint"
                android:inputType="textCapSentences"
                android:lines="1"
                android:maxLines="1"
                android:text="@={taskViewModel.title}" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_edit_task_fragment_description_hint"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:text="@={taskViewModel.description}" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</layout>
